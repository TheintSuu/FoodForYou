<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_medium"
    android:layout_height="200dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutShopImage"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="15dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFoodItem"
            android:layout_width="140dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/empty"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/foodDetailLayout"
        android:layout_toEndOf="@id/layoutShopImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khao Pad"
            android:textStyle="bold"
            android:padding="@dimen/margin_medium"
            android:textSize="@dimen/text_regular_3x"
            android:id="@+id/tvFoodName"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khao Pad(Fured Rice)"
            android:padding="@dimen/margin_medium"
            android:id="@+id/tvFoodDetail"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_star_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_small"
                android:id="@+id/tvRating"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ratings"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_small"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_small"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_attach_money_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_small"
                android:id="@+id/tvPrice"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_small"

                />


        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:padding="@dimen/margin_small"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_add_circle_24" />



</RelativeLayout>